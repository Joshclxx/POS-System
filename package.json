{
  "name": "pos-system",
  "version": "0.1.0",
  "description": "POS System built with Next.js and Electron",
  "author": "Jay",
  "main": "main.js",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron electron.js\"",
    "build": "prisma generate && next build",
    "start": "next start",
    "prod": "concurrently \"next start\" \"wait-on http://localhost:3000 && electron .\"",
    "lint": "next lint",
    "tailwind:init": "node_modules/.bin/tailwindcss init -p",
    "dist": "electron-builder",
    "package": "electron-builder --dir"
  },
  "dependencies": {
    "@apollo/client": "^3.13.8",
    "@apollo/server": "^4.12.0",
    "@as-integrations/next": "^3.2.0",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@tailwindcss/postcss": "^4.0.15",
    "bcryptjs": "^3.0.2",
    "classnames": "^2.5.1",
    "concurrently": "^9.1.2",
    "date-fns": "^4.1.0",
    "graphql": "^16.11.0",
    "graphql-tag": "^2.12.6",
    "init": "^0.1.2",
    "micro": "^10.0.1",
    "motion": "^12.6.0",
    "next": "^15.3.2",
    "react": "18",
    "react-dom": "18",
    "react-hot-toast": "^2.5.2",
    "sonner": "^2.0.1",
    "vaul": "^1.1.2",
    "wait-on": "^8.0.3",
    "yarn": "^1.22.22",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@prisma/client": "^6.8.2",
    "@types/node": "^22.15.3",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/tailwindcss": "^3.1.0",
    "autoprefixer": "^10.4.21",
    "electron": "^36.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.2.1",
    "i": "^0.3.7",
    "npm": "^11.4.1",
    "postcss": "^8.5.3",
    "prisma": "^6.8.2",
    "tailwindcss": "^4.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
